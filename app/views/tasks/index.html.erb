<h1>Ruby on Rails</h1>
<%= link_to '掲示板', new_task_path %>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.title %>
      <%= link_to '[edit]', edit_task_path(task) %>
      <%= link_to '[destroy]', task_path(task), data: {turbo_method: 'delete',turbo_confirm: 'Are you sure?'} %>
    </li>
  <% end %>
</ul>



